<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela02">

    <ImageView
        android:id="@+id/imgMeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/meme01" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/voltar"
        android:onClick="voltar"
        app:layout_constraintEnd_toStartOf="@+id/btnAvancar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMeme" />

    <Button
        android:id="@+id/btnAvancar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/avancar"
        android:onClick="avancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVoltar"
        app:layout_constraintTop_toBottomOf="@+id/imgMeme" />
</android.support.constraint.ConstraintLayout>